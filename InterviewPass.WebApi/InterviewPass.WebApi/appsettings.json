{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "bin/Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Application": "InterviewPass"
    }
  },
  "AllowedHosts": "*",
  "DbPath": "C:\\MentorDb\\interviewPass.db",
  "ConnectionStrings": {
    "InterviewPassContext": "Server=(localdb)\\mssqllocaldb;Database=InterviewPassContext-c5f68a00-6896-4368-a759-195064b7fdab;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}