
CREATE TABLE EmploymentType (
    Id   INTEGER PRIMARY KEY,
    Name TEXT
);

CREATE TABLE Job (
    Id               TEXT     PRIMARY KEY,
    Title            TEXT,
    Description      TEXT,
    Image_path       TEXT,
    EmploymentTypeId INTEGER  REFERENCES EmploymentType (Id),
    Experience       INTEGER,
    SalaryType       INTEGER,
    CreatedBy        TEXT     REFERENCES UserHr (Id),
    CreatedDate      DATETIME
);
CREATE TABLE JobFiles(
    Id       TEXT PRIMARY KEY,
    JobId    TEXT REFERENCES Job (Id),
    FilePath TEXT
);
CREATE TABLE JobSkills (
    Id      TEXT PRIMARY KEY,
    JobId   TEXT REFERENCES Job (Id),
    SkillId TEXT REFERENCES Skill (Id) 
);

ALTER TABLE Exam
ADD COLUMN JobId TEXT REFERENCES Job(Id);
